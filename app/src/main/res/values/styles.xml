<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Loader  -->
    <style name="Loader.Medium" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/loader_medium</item>
        <item name="android:layout_height">@dimen/loader_medium</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <!--    New One -->
    <style name="Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Text Fonts    -->
    <style name="Text.Regular" parent="Text">
        <item name="android:fontFamily">@font/work_sans_regular</item>
    </style>

    <style name="Text.Semibold" parent="Text">
        <item name="android:fontFamily">@font/work_sans_semibold</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="android:fontFamily">@font/work_sans_medium</item>
    </style>

    <!--    Text Headers-->
    <style name="Text.H1" parent="Text.Semibold">
        <item name="android:textSize">@dimen/text_headline_1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.H2.Semibold" parent="Text.Semibold">
        <item name="android:textSize">@dimen/text_headline_2</item>
    </style>

    <style name="Text.H2.Medium" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_headline_2</item>
    </style>

    <style name="Text.H3" parent="Text.Semibold">
        <item name="android:textSize">@dimen/text_headline_3</item>
    </style>

    <!--    Texts size -->
    <style name="Text.Regular.Normal_1" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_normal_1</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Medium.Normal_1" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_normal_1</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Regular.Normal_2" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_normal_2</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Regular.Normal_2.White" parent="Text.Regular.Normal_2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Medium.Normal_2" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_normal_2</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Medium.Normal_3" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_normal_3</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Regular.Normal_4" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_normal_4</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Medium.Normal_4" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_normal_4</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Regular.Mini_2" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_mini_2</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Regular.Mini_2.White" parent="Text.Regular.Mini_2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Regular.Mini_2.Caption" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_mini_2</item>
        <item name="android:textColor">@color/text_caption</item>
    </style>

    <style name="Text.Regular.Mini_3" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_mini_3</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Text.Medium.Mini_3" parent="Text.Medium">
        <item name="android:textSize">@dimen/text_mini_3</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!--    Buttons-->
    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal_1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/work_sans_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Green_1" parent="Button">
<!--        <item name="android:background">@drawable/</item>-->
    </style>


    <!-- TextInputLayout    -->
    <style name="TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="boxStrokeColor">@color/green</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintEnabled">true</item>
        <item name="errorEnabled">false</item>
<!--        <item name="android:layout_marginTop">-8dp</item>-->
        <item name="errorTextColor">@color/red</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextAppearance">@style/TextHintSize</item>
        <item name="font">@font/work_sans_regular</item>
        <item name="hintTextColor">@color/text_caption</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:paddingBottom">@dimen/page_margin</item>-->
    </style>

    <style name="TextHintSize" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_mini_2</item>
        <item name="fontFamily">@font/work_sans_medium</item>
    </style>

    <!-- EditText    -->
    <style name="EditText.FilledBox" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Regular.Normal_2</item>
        <item name="android:textColorHint">@color/text_caption</item>
<!--        <item name="font">@font/work_sans_regular</item>-->
        <item name="errorTextColor">@color/red</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="EditText.FilledBox.Phone" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Regular.Normal_2</item>
        <item name="android:textColorHint">@color/text_caption</item>
        <item name="font">@font/work_sans_regular</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="EditText.Otp" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Regular.Normal_2</item>
<!--        <item name="font">@font/work_sans_regular</item>-->
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <!-- Switch    -->
    <style name="Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/white</item>
        <item name="colorControlActivated">@color/border_gray</item>
    </style>

    <!-- ProgressBar -->
    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/loader_small</item>
        <item name="android:layout_height">@dimen/loader_small</item>
        <item name="android:indeterminateTint">@color/white</item>
    </style>

    <!-- toolbar    -->
    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <dimen name="loader_small">18dp</dimen>

    <!--  Bottom Navigation  -->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/work_sans_regular</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/work_sans_regular</item>
    </style>
</resources>