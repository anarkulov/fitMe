<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.alarm.AlarmDetails">

    <com.example.fitme.core.ui.widgets.MainToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_alarm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/page_margin"
        android:background="@color/white"
        android:drawablePadding="@dimen/page_margin"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLines="2"
        android:paddingHorizontal="@dimen/page_margin"
        android:text="Alarm Title"
        android:textSize="@dimen/text_headline_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TimePicker
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        app:layout_constraintTop_toBottomOf="@id/et_alarm_name"
        />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/page_margin"
        android:layout_marginTop="@dimen/medium_margin"
        android:background="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@+id/time" />

    <LinearLayout
        android:id="@+id/week_day_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/divider">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:background="@drawable/ic_bg_circle_day"
            app:cardCornerRadius="@dimen/page_margin"
            app:cardElevation="@dimen/cardview_default_elevation">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text.Regular.Mini_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="M" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:background="@drawable/ic_bg_circle_day"
            app:cardCornerRadius="@dimen/page_margin"
            app:cardElevation="@dimen/cardview_default_elevation">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text.Regular.Mini_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="T" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:background="@drawable/ic_bg_circle_day"
            app:cardCornerRadius="@dimen/page_margin"
            app:cardElevation="@dimen/cardview_default_elevation">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text.Regular.Mini_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="W" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:background="@drawable/ic_bg_circle_day"
            app:cardCornerRadius="@dimen/page_margin"
            app:cardElevation="@dimen/cardview_default_elevation">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text.Regular.Mini_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="T" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:background="@drawable/ic_bg_circle_day"
            app:cardCornerRadius="@dimen/page_margin"
            app:cardElevation="@dimen/cardview_default_elevation">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text.Regular.Mini_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="F" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:background="@drawable/ic_bg_circle_day"
            app:cardCornerRadius="@dimen/page_margin"
            app:cardElevation="@dimen/cardview_default_elevation">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text.Regular.Mini_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="S" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:background="@drawable/ic_bg_circle_day"
            app:cardCornerRadius="@dimen/page_margin"
            app:cardElevation="@dimen/cardview_default_elevation">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Text.Regular.Mini_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="S" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/pose_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/page_margin"
        android:layout_marginTop="@dimen/big_margin"
        app:cardBackgroundColor="#f7f8f8"
        app:cardCornerRadius="@dimen/medium_margin"
        app:layout_constraintTop_toBottomOf="@+id/week_day_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_weight=".1"
                android:src="@drawable/ic_pushup" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_weight=".8"
                android:text="Select a pose" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_select_pose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:paddingVertical="@dimen/element_margin"
                android:src="@drawable/ic_arrow_right" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/page_margin"
        android:layout_marginTop="@dimen/medium_margin"
        app:cardBackgroundColor="#f7f8f8"
        app:cardCornerRadius="@dimen/medium_margin"
        app:layout_constraintTop_toBottomOf="@+id/pose_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_weight=".1"
                android:src="@drawable/ic_pushup" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/medium_margin"
                android:layout_weight=".8"
                android:text="Select a pose" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_select_alarm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:paddingVertical="@dimen/element_margin"
                android:src="@drawable/ic_arrow_right" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        style="@style/Button.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/page_margin"
        android:layout_marginBottom="@dimen/big_margin"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>