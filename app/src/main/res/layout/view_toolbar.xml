<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tool_bar_height"
    android:orientation="vertical"
    app:layout_scrollFlags="scroll|enterAlways">

    <ImageView
        android:id="@+id/action_left"
        android:layout_width="@dimen/tool_bar_icon"
        android:layout_height="@dimen/tool_bar_icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/element_margin"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="@dimen/element_margin"
        android:src="@drawable/ic_back"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/title"
        style="@style/Text.Medium.Normal_1"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/big_margin"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Toolbar Title" />
    
    <ImageView
        android:id="@+id/action_right"
        android:layout_width="@dimen/tool_bar_icon"
        android:layout_height="@dimen/tool_bar_icon"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/small_margin"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="14dp"
        android:scaleType="fitEnd"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

</RelativeLayout>