<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/element_margin">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingVertical="@dimen/big_margin">

       <androidx.appcompat.widget.AppCompatEditText
           android:id="@+id/et_activity_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/page_margin"
           android:layout_marginTop="@dimen/page_margin"
           android:background="@drawable/bg_input_field"
           android:drawablePadding="@dimen/page_margin"
           android:elevation="@dimen/small_margin"
           android:hint="Activity name"
           android:imeOptions="actionNext"
           android:importantForAutofill="no"
           android:inputType="text"
           android:maxLines="1"
           android:paddingHorizontal="@dimen/page_margin"
           android:paddingVertical="@dimen/medium_margin"
           android:textSize="@dimen/text_normal_3"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/et_exercise_counter"
           style="@style/Text.Medium.Normal_3"
           android:layout_width="60dp"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/page_margin"
           android:layout_marginTop="@dimen/page_margin"
           android:background="@drawable/bg_input_field"
           android:elevation="@dimen/small_margin"
           android:gravity="center"
           android:imeOptions="actionNext"
           android:importantForAutofill="no"
           android:inputType="text"
           android:maxLines="1"
           android:paddingHorizontal="@dimen/small_margin"
           android:paddingVertical="@dimen/medium_margin"
           android:textSize="@dimen/text_normal_3"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.5"
           app:layout_constraintStart_toEndOf="@+id/tv_exercise_counter"
           app:layout_constraintTop_toBottomOf="@+id/et_activity_name" />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tv_exercise_counter"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/page_margin"
           android:layout_marginBottom="5dp"
           android:background="@drawable/bg_input_field"
           android:backgroundTint="@color/white"
           android:drawablePadding="@dimen/page_margin"
           android:elevation="@dimen/small_margin"
           android:imeOptions="actionNext"
           android:importantForAutofill="no"
           android:inputType="text"
           android:maxLines="1"
           android:paddingHorizontal="@dimen/page_margin"
           android:paddingVertical="@dimen/medium_margin"
           android:text="Exercise counter"
           android:textSize="@dimen/text_normal_3"
           app:layout_constraintBottom_toBottomOf="@+id/et_exercise_counter"
           app:layout_constraintEnd_toStartOf="@+id/et_exercise_counter"
           app:layout_constraintHorizontal_bias="0.5"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="@+id/et_exercise_counter" />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tv_seconds_counter"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/page_margin"
           android:background="@drawable/bg_input_field"
           android:backgroundTint="@color/white"
           android:drawablePadding="@dimen/page_margin"
           android:elevation="@dimen/small_margin"
           android:imeOptions="actionNext"
           android:importantForAutofill="no"
           android:inputType="text"
           android:maxLines="1"
           android:paddingHorizontal="@dimen/page_margin"
           android:paddingVertical="@dimen/medium_margin"
           android:text="Exercise seconds"
           android:textSize="@dimen/text_normal_3"
           app:layout_constraintBottom_toBottomOf="@+id/et_seconds_counter"
           app:layout_constraintEnd_toStartOf="@+id/et_seconds_counter"
           app:layout_constraintHorizontal_bias="0.5"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="@+id/et_seconds_counter" />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/et_seconds_counter"
           style="@style/Text.Medium.Normal_3"
           android:layout_width="60dp"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/page_margin"
           android:layout_marginTop="@dimen/element_margin"
           android:background="@drawable/bg_input_field"
           android:drawablePadding="@dimen/page_margin"
           android:elevation="@dimen/small_margin"
           android:gravity="center"
           android:imeOptions="actionNext"
           android:importantForAutofill="no"
           android:inputType="text"
           android:maxLines="1"
           android:paddingHorizontal="@dimen/page_margin"
           android:paddingVertical="@dimen/medium_margin"
           android:textSize="@dimen/text_normal_3"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.5"
           app:layout_constraintStart_toEndOf="@+id/tv_seconds_counter"
           app:layout_constraintTop_toBottomOf="@+id/et_exercise_counter" />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tv_calories_counter"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/page_margin"
           android:background="@drawable/bg_input_field"
           android:backgroundTint="@color/white"
           android:drawablePadding="@dimen/page_margin"
           android:elevation="@dimen/small_margin"
           android:imeOptions="actionNext"
           android:importantForAutofill="no"
           android:inputType="text"
           android:maxLines="1"
           android:paddingHorizontal="@dimen/page_margin"
           android:paddingVertical="@dimen/medium_margin"
           android:text="Exercise calories"
           android:textSize="@dimen/text_normal_3"
           app:layout_constraintBottom_toBottomOf="@+id/et_calories_counter"
           app:layout_constraintEnd_toStartOf="@+id/et_calories_counter"
           app:layout_constraintHorizontal_bias="0.5"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="@+id/et_calories_counter" />

       <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/et_calories_counter"
           style="@style/Text.Medium.Normal_3"
           android:layout_width="60dp"
           android:layout_height="wrap_content"
           android:layout_marginHorizontal="@dimen/page_margin"
           android:layout_marginTop="@dimen/element_margin"
           android:background="@drawable/bg_input_field"
           android:drawablePadding="@dimen/page_margin"
           android:elevation="@dimen/small_margin"
           android:gravity="center"
           android:imeOptions="actionNext"
           android:importantForAutofill="no"
           android:inputType="text"
           android:maxLines="1"
           android:paddingHorizontal="@dimen/page_margin"
           android:paddingVertical="@dimen/medium_margin"
           android:textSize="@dimen/text_normal_3"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.5"
           app:layout_constraintStart_toEndOf="@+id/tv_calories_counter"
           app:layout_constraintTop_toBottomOf="@+id/et_seconds_counter" />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btn_save"
           style="@style/Button.Blue"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:layout_marginTop="@dimen/page_margin"
           android:text="@string/save"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.5"
           app:layout_constraintStart_toEndOf="@+id/btn_cancel"
           app:layout_constraintTop_toBottomOf="@+id/et_calories_counter" />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btn_cancel"
           style="@style/Button.Blue"
           android:layout_width="wrap_content"
           android:layout_height="40dp"
           android:layout_marginTop="@dimen/page_margin"
           android:text="@string/cancel"
           app:layout_constraintEnd_toStartOf="@+id/btn_save"
           app:layout_constraintHorizontal_bias="0.5"
           app:layout_constraintHorizontal_chainStyle="spread"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/et_calories_counter" />


   </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>