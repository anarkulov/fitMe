<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.fitme.core.ui.widgets.MainToolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:layout_marginTop="@dimen/element_margin"
        style="@style/Loader.Medium"
        android:id="@+id/progress_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/verify_number"
        style="@style/Text.H1.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/big_margin"
        android:text="Verification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/code_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/big_margin"
        android:layout_marginTop="@dimen/page_margin"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tool_bar"
        app:layout_constraintTop_toBottomOf="@+id/verify_number">

        <EditText
            android:id="@+id/et_otp_1"
            style="@style/EditText.Otp"
            android:background="@drawable/bg_otp"
            android:imeOptions="actionNext"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/et_otp_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <EditText
            android:id="@+id/et_otp_2"
            style="@style/EditText.Otp"
            android:background="@drawable/bg_otp"
            android:imeOptions="actionNext"
            app:layout_constraintEnd_toStartOf="@+id/et_otp_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/et_otp_1"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_otp_3"
            style="@style/EditText.Otp"
            android:background="@drawable/bg_otp"
            android:imeOptions="actionNext"
            app:layout_constraintEnd_toStartOf="@+id/et_otp_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/et_otp_2"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_otp_4"
            style="@style/EditText.Otp"
            android:background="@drawable/bg_otp"
            android:imeOptions="actionNext"
            app:layout_constraintEnd_toStartOf="@+id/et_otp_5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/et_otp_3"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_otp_5"
            style="@style/EditText.Otp"
            android:background="@drawable/bg_otp"
            android:imeOptions="actionNext"
            app:layout_constraintEnd_toStartOf="@+id/et_otp_6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/et_otp_4"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_otp_6"
            style="@style/EditText.Otp"
            android:background="@drawable/bg_otp"
            android:imeOptions="actionDone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/et_otp_5"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_code_error"
        style="@style/Text.Regular.Mini_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginTop="2dp"
        android:text="wrong code"
        android:textColor="@color/red"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_container" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/big_margin"
        android:layout_marginTop="@dimen/page_margin_x2"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tool_bar"
        app:layout_constraintTop_toBottomOf="@+id/code_container"
        app:layout_goneMarginTop="@dimen/page_margin_x2">

        <TextView
            style="@style/Text.Regular.Normal_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Did not get a code?" />

        <TextView
            android:id="@+id/tv_resend"
            style="@style/Text.Regular.Normal_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_caption"
            android:text="@string/resend_in" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>